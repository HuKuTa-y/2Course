<Window x:Class="_2course.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_2course"
        mc:Ignorable="d"
        Title="Кодексы и статьи" Height="600" Width="1100">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <!-- Кодексы -->
            <ColumnDefinition Width="200"/>
            <!-- Законы -->
            <ColumnDefinition Width="400"/>
            <!-- Статьи -->
            <ColumnDefinition Width="300"/>
            <!-- Тексты -->
        </Grid.ColumnDefinitions>

        <!-- Панель для кодексов -->
        <ScrollViewer Grid.Column="0" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto" Margin="5">
            <StackPanel x:Name="CodesPanel"/>
        </ScrollViewer>

        <!-- Панель для законов -->
        <ScrollViewer Grid.Column="1" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto" Margin="5">
            <StackPanel x:Name="LawsPanel"/>
        </ScrollViewer>

        <!-- Панель для статей -->
        <ScrollViewer Grid.Column="2" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto" Margin="5">
            <StackPanel x:Name="ArticlesPanel"/>
        </ScrollViewer>

        <!-- Панель для текста из text_articles.json -->
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel x:Name="ContentStackPanel" />
        </ScrollViewer>
    </Grid>
</Window>
