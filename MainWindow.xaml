<Window x:Class="_2course.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_2course"
        mc:Ignorable="d"
        Title="Кодексы и статьи" Height="600" Width="1100">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <!-- Левая панель -->
            <ColumnDefinition Width="200"/>
            <!-- Правая панель -->
            <ColumnDefinition Width="400"/>
            
            <ColumnDefinition Width="auto"/>
        </Grid.ColumnDefinitions>

        <!-- Панель для кодексов -->
        <StackPanel x:Name="CodesPanel" Grid.Column="0" Background="#EEE" Margin="5">
            <TextBlock Text="Кодексы" FontWeight="Bold" Margin="5"/>
        </StackPanel>

        <!-- Панель для законов -->
        <StackPanel x:Name="LawsPanel" Grid.Column="1" Background="#FFF" Margin="5">
            <TextBlock Text="Законы" FontWeight="Bold" Margin="5"/>
        </StackPanel>

        <!-- Панель для статей -->
        <ScrollViewer Grid.Column="2" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto" Margin="5">
            <StackPanel x:Name="ArticlesPanel">
                <TextBlock Text="Статьи" FontWeight="Bold" Margin="5"/>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>
